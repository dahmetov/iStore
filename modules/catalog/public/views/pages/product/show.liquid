---
slug: product/show
layout_name: 2col
---
{% graphql g = "modules/catalog/product", id: context.params.slug3 %}
{% assign product = g.product.results.first %}
<div class="container">
  <h1 class="my-4">{{ g.product.results.first.properties.name }}
    <small>
       <span class="price h3 text-warning">
         <span class="currency">US $</span><span class="num">{{ g.product.results.first.properties.price }}</span>
       </span>
    </small>
  </h1>

  <div class="row">
    <div class="col-md-8">
      <img class="img-fluid" src="{{ g.product.results.first.properties.image_url }}" alt="">
    </div>

    <div class="col-md-4">
      <h3 class="my-3">Product Description</h3>
      <p>{{ g.product.results.first.properties.description }}</p>
      <h3 class="my-3">Product Details</h3>
      <ul>
        <li>Lorem Ipsum</li>
        <li>Dolor Sit Amet</li>
        <li>Consectetur</li>
        <li>Adipiscing Elit</li>
      </ul>
      <hr>
      <a href="#" class="btn btn-lg btn-primary text-uppercase"> Buy now </a>
      {% include_form "modules/cart/add_to_cart_blue" with product %}
    </div>
  </div>
</div>
